// jsconfig.json
{
  "compilerOptions": {
    "jsx": "react-jsx", // Crucial for React JSX understanding
    "baseUrl": "src", // If your source code is in 'src' folder
    "paths": {
      "@/*": ["./*"] // Example for absolute imports from src
    }
    // "checkJs": true, // Recommended for better JS type checking
  },
  "include": ["src"] // Tell VS Code to include your 'src' directory for IntelliSense
}
